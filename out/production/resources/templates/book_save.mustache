{{>layout/header}}

<h1>게시글 등록</h1>

<div class="col-md-12">
    <!--<div class="col-md-4">-->
    <form>
        <div class="form-group">
            <label for="genre">장르</label>
            <input type="text" class="form-control" id="genre" placeholder="장르를 입력하세요">
        </div>
        <div class="form-group">
            <label for="book_name">도서명</label>
            <input type="text" class="form-control" id="book_name" placeholder="도서명을 입력하세요">
        </div>
        <div class="form-group">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
        </div>
        <div class="form-group">
            <label for="user"> 작성자 </label>
            <input type="text" class="form-control" id="user" placeholder="작성자를 입력하세요" value="{{userMail}}" readonly >
        </div>
        <div class="form-group">
            <label for="comment"> 내용 </label>
            <textarea class="form-control " id="comment" placeholder="내용을 입력하세요" rows="15"></textarea>
        </div>
    </form>
    <a href="/book_list" role="button" class="btn btn-secondary pt-2">취소</a>
    <button type="button" class="btn btn-primary" id="btn-book-save">등록</button>
    <!--</div>-->
</div>

{{>layout/footer}}